<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/chad" />
    </LinearLayout>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Chad Swenson"
        android:textColor="#040404"
        android:textSize="15sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/contact_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/contact_name"
        android:layout_below="@id/contact_name"
        android:layout_marginTop="1dip"
        android:text="Office (Downtown Dallas)"
        android:textColor="#343434"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/contact_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/contact_name"
        android:layout_below="@id/contact_location"
        android:layout_marginTop="1dip"
        android:text="It must be lunch time"
        android:textColor="#343434"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/contact_availability"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
		android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/status_available" />

</RelativeLayout>